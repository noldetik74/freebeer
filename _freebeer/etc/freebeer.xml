<freebeer>
  <!-- $CVSHeader: _freebeer/etc/freebeer.xml,v 1.2 2004/03/07 17:51:16 ross Exp $ -->

  <!-- HTTPS protocol configuration settings -->
  <!--	
  	Multiline
  	comments
  	are
  	supported
  -->

  <adodb>
    <driver>mysqlt</driver>
  </adodb>

  <adodb_session>
	<driver>mysqlt</driver>
    <host>localhost</host>
    <user>root</user>
    <password></password>
    <database>test</database>
    <!-- persist>1</persist -->
<!--  
	<lifetime>1440</lifetime>
	<debug></debug>
	<table>sessions</table>
	<optimize></optimize>
	<syncSeconds>60</syncSeconds>
	<clob></clob>
	<dataFieldName>data</dataFieldName>
	<encryptionKey>Enter your own encryption key here</encryptionKey>
-->
  </adodb_session>
  
  <adodb_mysqlt>
    <host>localhost</host>
    <user>root</user>
    <password></password>
    <database>test</database>
    <!-- persist>1</persist -->
  </adodb_mysqlt>

  <adodb_mysqlt_debug>
    <host>localhost</host>
    <user>root</user>
    <password></password>
    <database>test</database>
    <!-- persist>1</persist -->
  </adodb_mysqlt_debug>
  
  <mysql>
    <host>localhost</host>
    <user>root</user>
    <password></password>
    <database>test</database>
    <!-- persist>1</persist -->
  </mysql>
  
  <https>

    <!-- Enable HTTPS redirection? -->
    <!-- Default: 1 (yes) -->
    <enabled>0</enabled>

    <!-- HTTP host hame -->
    <!-- Default: $_SERVER['HTTP_HOST'] -->
    <http_host>http_host.com</http_host>

    <!-- HTTP port -->
    <!-- Default: 80 -->
    <http_port>8080</http_port>

    <!-- HTTP path -->
    <!-- Default: (none) -->
    <http_path>/http_path</http_path>

    <!-- HTTPS host hame -->
    <!-- Default: $_SERVER['HTTP_HOST'] -->
    <https_host>https_host.com</https_host>

    <!-- HTTPS port -->
    <!-- Default: 443 -->
    <https_port>8443</https_port>

    <!-- HTTPS path -->
    <!-- Default: (none) -->
    <https_path>/https_path</https_path>

    <!-- Convert <input src='/path/to/image.png' /> type tags? -->
    <!-- Default: 0 (no) -->
    <convert_input_src>1</convert_input_src>

  </https>
</freebeer>
